<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, id: 'errors', class: 'resource_errors alert alert-danger', role: 'alert', data: { resource_id: resource.id } do %>
    <div class="ps-2">
      <h3>Есть ошибки</h3>
      <ol class="mb-0">
        <% resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ol>
    </div>
  <% end %>
<% end %>
