<%= provide :main_menu do %>
  <nav class="navbar navbar-expand-md sticky-top navbar-light bg-light ">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to 'AskIt', root_path %>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <%= link_to 'Questions', questions_path, class: "ps-3 nav-link #{'active fw-bold' if current_page?(questions_path)}" %>
        </ul>

        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= link_to current_user.name_or_email, '#',
                          class: 'nav-link px-2 dropdown-toggle',
                          data: {"bs-toggle": 'dropdown'} %>

              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Edit profile', edit_user_path(current_user), class: 'dropdown-item' %>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                  <%= link_to 'Log Out', session_path, class: 'dropdown-item', data: {method: :delete} %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign Up', new_user_path, class: 'nav-link px-2' %></li>

            <li><%= link_to 'Log In', new_session_path, class: 'nav-link px-2' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
